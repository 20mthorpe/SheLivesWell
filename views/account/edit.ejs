<% if (errors) { %>
    <ul class="notice">
        <% if (Array.isArray(errors)) { %>
            <% errors.forEach(function(error) { %>
                <li><%= error.msg %></li>
            <% }); %>
        <% } else { %>
            <li><%= errors %></li>
        <% } %>
    </ul>
<% } %>


